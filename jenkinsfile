pipeline {
    agent any
    stages {
        stage("Test") {
			steps {
				
				sh 'mvn surefire:test surefire-report:report'
				
				//sh  'cd /var/lib/jenkins/workspace/junitreportgeneration/target/surefire-reports'
				//sh 'touch *.xml'
			}
		}
        stage("build") {
            steps {
                 sh  'mvn -Dmaven.test.skip=true'
            }
        }
    }
    post {
        always {
            archiveArtifacts "target/**/*"
            junit '**/surefire-reports/*.xml' 

         }  
        }	
}