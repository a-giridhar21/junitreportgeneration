pipeline {
    agent any
    stages {
        stage("Test") {
			steps {
				sh  'mvn install surefire-report:report'
			}
		}
		
        stage("build") {
            steps {
                 sh  'mvn clean deploy -Dmaven.test.skip=true'
            }
        }
    }
    post {
        always {
            archiveArtifacts "target/**/*"
            junit '**/surefire-reports/*.xml' 
            
             
         }  
        }
    }
